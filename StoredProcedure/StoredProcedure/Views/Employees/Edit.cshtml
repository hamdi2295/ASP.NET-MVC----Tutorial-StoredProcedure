
@{
    ViewBag.Title = "Edit";
}

<div class="container">
    @foreach (System.Data.DataRow dr in ViewBag.emp.Rows)
    {
        <form method="post">
            <div class="form-group">
                <label>First Name</label>
                <input class="form-control" type="text" id="FirstName" name="FirstName" value="@dr["FirstName"]" />
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input class="form-control" type="text" id="LastName" name="LastName" value="@dr["LastName"]"/>
            </div>
            <div class="form-group">
                <label>Gender</label>
                <select id="Gender" name="Gender" class="form-control">
                   
                    <option value="@dr["Gender"]">@dr["Gender"]</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                @*<input class="form-control" type="text" id="Gender" name="Gender" value="@dr["Gender"]"/>*@
            </div>
            <div class="form-group">
                <label>Address</label>
                <input class="form-control" type="text" id="Address" name="Address" value="@dr["Address"]"/>
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <input class="form-control" type="text" id="PhoneNumber" name="PhoneNumber" value="@dr["PhoneNumber"]"/>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
                <a type="button" class="btn btn-default" href="@Url.Action("Index","Employees")">Back</a>
            </div>
        </form>
    }
</div>
